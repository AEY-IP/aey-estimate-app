# Пример файла .env.local для развертывания
# Скопируйте в .env.local и заполните реальными значениями

# База данных PostgreSQL
DATABASE_URL="postgresql://username:password@host:5432/database_name?schema=public"

# Аутентификация
NEXTAUTH_SECRET="super-secret-key-generate-random-string-here"
NEXTAUTH_URL="http://localhost:3000"

# Для продакшена
NEXT_PUBLIC_APP_URL="https://your-app.vercel.app"

# Файловое хранилище Vercel Blob (опционально)
BLOB_READ_WRITE_TOKEN="vercel_blob_rw_token_here"

# Настройки Prisma для продакшена
PRISMA_GENERATE_DATAPROXY="true"

# Дебаг (только для разработки)
DEBUG="prisma:query" 